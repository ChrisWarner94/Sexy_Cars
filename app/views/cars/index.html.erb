
<div class="banner">
  <div class="video-container">
    <%= video_tag "car.mp4", autoplay: true, loop: true %>
      <div class="caption">
        <h1>Book your favourite cars!</h1>
        <%= link_to "Rent your car!", new_car_path, class: "btn btn-flat" %>
      </div>
  </div>
</div>

</div>
<div class="cards">
  <% @cars.each do |car| %>
    <div class="card-product">
    <% if car.photo.attached? %>
      <%= cl_image_tag car.photo.key, height: 300, width: 600, crop: :fit %>
    <% end %>
      <div class="card-product-infos">
        <%= link_to car.model, car_path(car), class: "btn btn-flat"  %>
        <%= car.colour %>
      </div>
    <%end  %>
  </div>
